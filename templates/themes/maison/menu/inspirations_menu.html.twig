<nav class="navbar navbar--carousel-nav box-shadow">
    <div class="row mx-auto my-auto w-100">
        <div id="menuCarousel" class="carousel carousel--menu slide w-100" data-ride="carousel" data-interval="false">
            <div class="carousel-inner w-100" role="listbox">
                <div class="carousel-item active">
                    <div class="col-lg-2 col-md-3 carousel__menu-item">
                        <a href="/inspirations" class="carousel__menu-link d-flex flex-column align-items-center">
                            <img src="{{ asset('assets/icons/all-ideas.png') }}">
                            <span class="mt-auto">All ideas</span>
                        </a>
                    </div>
                </div>
                {% if menuItems is defined and menuItems|length > 0 %}
                    {% for item in menuItems %}
                        <div class="carousel-item">
                            <div class="col-lg-2 col-md-3 carousel__menu-item">
                                <a href="{{ path('ez_urlalias', {'locationId': item.locationId}) }}"
                                   class="carousel__menu-link d-flex flex-column align-items-center">
                                    {% set imageAssetsContent = get_image_asset_by_content_id(item.contentId, 'icon') %}
                                    {% if imageAssetsContent is not null %}
                                        {{ ez_render_field(imageAssetsContent, 'image') }}
                                    {% endif %}
                                    <span class="mt-auto">{{ item.name }}</span>
                                </a>
                            </div>
                        </div>
                    {% endfor %}
                {% endif %}
            </div>
            <a class="carousel-control-prev" href="#menuCarousel" role="button" data-slide="prev">
                <i class="material-icons-outlined">arrow_back_ios</i>
            </a>
            <a class="carousel-control-next" href="#menuCarousel" role="button" data-slide="next">
                <i class="material-icons-outlined">arrow_forward_ios</i>
            </a>
        </div>
    </div>
</nav>
